{
  "name": "anstyle",
  "version": "2.1.3",
  "description": "A very simple utility to change colors and styles of command line outputs (logs)",
  "keywords": [
    "command-line",
    "terminal",
    "CLI",
    "CLI-colors",
    "CLI-colors-and-styles",
    "ANSI-colors",
    "ANSI-colors-and-styles"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mirismaili/anstyle"
  },
  "license": "MIT",
  "author": "S. Mahdi Mir-Ismaili <s.m.mirismaili@gmail.com>",
  "type": "module",
  "main": "src/main.js",
  "types": "src/main.ts",
  "files": [
    "src"
  ],
  "scripts": {
    "prepublishOnly": "tsc",
    "patch-version": "npm version patch --no-git-tag-version",
    "increase-minor-version": "npm version minor --no-git-tag-version",
    "increase-major-version": "npm version major --no-git-tag-version",
    "tag-this-version": "node -e \"require('child_process').execSync('git tag v' + require('./package.json').version)\""
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "~5.1.3"
  },
  "engines": {
    "node": ">=16"
  }
}
